    "autoprefixer": "^10.4.0",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-macros": "^3.1.0",
    "cssnano": "^4.1.11",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
